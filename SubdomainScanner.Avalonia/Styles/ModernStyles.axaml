<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ==================== COLOR RESOURCES ==================== -->
    
    <!-- Light Theme Colors -->
    <Color x:Key="LightBackground">#FFFFFF</Color>
    <Color x:Key="LightSurface">#F8FAFC</Color>
    <Color x:Key="LightCardBackground">#FFFFFF</Color>
    <Color x:Key="LightBorder">#E2E8F0</Color>
    <Color x:Key="LightTextPrimary">#0F172A</Color>
    <Color x:Key="LightTextSecondary">#64748B</Color>
    <Color x:Key="LightTextTertiary">#94A3B8</Color>
    
    <!-- Dark Theme Colors (Slate Scale from Nuxt UI) -->
    <Color x:Key="DarkBackground">#0f172a</Color>
    <Color x:Key="DarkSurface">#1e293b</Color>
    <Color x:Key="DarkCardBackground">#1e293b</Color>
    <Color x:Key="DarkBorder">#475569</Color>
    <Color x:Key="DarkTextPrimary">#f1f5f9</Color>
    <Color x:Key="DarkTextSecondary">#cbd5e1</Color>
    <Color x:Key="DarkTextTertiary">#94a3b8</Color>
    
    <!-- Accent Colors (Nuxt UI Inspired - Green Primary) -->
    <Color x:Key="PrimaryColor">#22c55e</Color>
    <Color x:Key="PrimaryHover">#16a34a</Color>
    <Color x:Key="PrimaryPressed">#15803d</Color>

    <Color x:Key="SuccessColor">#22c55e</Color>
    <Color x:Key="SuccessHover">#16a34a</Color>
    <Color x:Key="SuccessPressed">#15803d</Color>
    
    <Color x:Key="WarningColor">#F59E0B</Color>
    <Color x:Key="DangerColor">#EF4444</Color>
    <Color x:Key="InfoColor">#06B6D4</Color>
    
    <!-- ==================== BRUSH RESOURCES ==================== -->
    
    <!-- Light Theme Brushes -->
    <SolidColorBrush x:Key="LightBackgroundBrush" Color="{StaticResource LightBackground}"/>
    <SolidColorBrush x:Key="LightSurfaceBrush" Color="{StaticResource LightSurface}"/>
    <SolidColorBrush x:Key="LightCardBackgroundBrush" Color="{StaticResource LightCardBackground}"/>
    <SolidColorBrush x:Key="LightBorderBrush" Color="{StaticResource LightBorder}"/>
    <SolidColorBrush x:Key="LightTextPrimaryBrush" Color="{StaticResource LightTextPrimary}"/>
    <SolidColorBrush x:Key="LightTextSecondaryBrush" Color="{StaticResource LightTextSecondary}"/>
    <SolidColorBrush x:Key="LightTextTertiaryBrush" Color="{StaticResource LightTextTertiary}"/>
    
    <!-- Dark Theme Brushes -->
    <SolidColorBrush x:Key="DarkBackgroundBrush" Color="{StaticResource DarkBackground}"/>
    <SolidColorBrush x:Key="DarkSurfaceBrush" Color="{StaticResource DarkSurface}"/>
    <SolidColorBrush x:Key="DarkCardBackgroundBrush" Color="{StaticResource DarkCardBackground}"/>
    <SolidColorBrush x:Key="DarkBorderBrush" Color="{StaticResource DarkBorder}"/>
    <SolidColorBrush x:Key="DarkTextPrimaryBrush" Color="{StaticResource DarkTextPrimary}"/>
    <SolidColorBrush x:Key="DarkTextSecondaryBrush" Color="{StaticResource DarkTextSecondary}"/>
    <SolidColorBrush x:Key="DarkTextTertiaryBrush" Color="{StaticResource DarkTextTertiary}"/>
    
    <!-- Accent Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{StaticResource PrimaryHover}"/>
    <SolidColorBrush x:Key="PrimaryPressedBrush" Color="{StaticResource PrimaryPressed}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="SuccessHoverBrush" Color="{StaticResource SuccessHover}"/>
    <SolidColorBrush x:Key="SuccessPressedBrush" Color="{StaticResource SuccessPressed}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    
    <!-- ==================== SHADOW RESOURCES ==================== -->

    <BoxShadows x:Key="ElevationLow">0 1 3 0 #00000014, 0 1 2 -1 #00000014</BoxShadows>
    <BoxShadows x:Key="ElevationMedium">0 4 6 -1 #00000026, 0 2 4 -2 #00000026</BoxShadows>
    <BoxShadows x:Key="ElevationHigh">0 10 15 -3 #00000033, 0 4 6 -4 #00000033</BoxShadows>
    <BoxShadows x:Key="ElevationGlow">0 0 0 1 #22c55e40, 0 4 12 0 #22c55e20</BoxShadows>
    
</ResourceDictionary>
